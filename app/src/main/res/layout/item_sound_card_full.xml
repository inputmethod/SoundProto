<?xml version="1.0" encoding="utf-8"?>
<com.typany.keyboard.views.settingPanel.sound.SoundItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sound_item_container_white"
    android:layout_margin="5.5dp">

    <ImageView
        android:id="@+id/iv_skin"
        android:layout_width="@dimen/sound_fragment_icon_size"
        android:layout_height="@dimen/sound_fragment_icon_size"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/sound_remote_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_remote_indicator"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

    <FrameLayout
        android:id="@+id/downloading_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/sound_item_dowloading" >

        <com.typany.sound.views.ProgressBarView
            android:id="@+id/view"
            android:layout_width="49dp"
            android:layout_height="49dp"
            app:circlesColor="@android:color/transparent"
            app:currentProgressColor="#B36C6888"
            app:style="0"
            android:layout_gravity="center" />
    </FrameLayout>
</com.typany.keyboard.views.settingPanel.sound.SoundItemView>
